<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/add_friend_fragment_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:ems="10"
        android:backgroundTint="@color/black"
        android:inputType="textPersonName"
        android:imeOptions="actionDone"
        android:hint="Search User"
        android:textColorHint="@color/black"

        />

    <ListView
        android:id="@+id/add_friend_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_friend_fragment_search"
        />

    <Button
        android:text="Load More"
        android:textColor="@color/antiflash_white"
        android:backgroundTint="@color/cornflower_blue"
        android:id="@+id/add_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_friend_fragment_list"
        android:layout_marginBottom="100dp"/>
    <ProgressBar
        android:id="@+id/add_friend_progress"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/multi_add_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/UT_orange"
        android:text="Add Friends"
        android:textColor="@color/antiflash_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_friend_button" />
</androidx.constraintlayout.widget.ConstraintLayout>