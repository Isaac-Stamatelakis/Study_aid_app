<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chatgroup_selector_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/small_orange_rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Classes"
        app:layout_constraintBottom_toBottomOf="@+id/chatgroup_selector_class"
        app:layout_constraintEnd_toEndOf="@+id/chatgroup_selector_class"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/chatgroup_selector_class"
        app:layout_constraintTop_toTopOf="@+id/chatgroup_selector_class"
        app:layout_constraintVertical_bias="0.384" />

    <ImageView
        android:id="@+id/chatgroup_selector_studygroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:src="@drawable/small_blue_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Study Groups"
        app:layout_constraintBottom_toBottomOf="@+id/chatgroup_selector_studygroup"
        app:layout_constraintEnd_toEndOf="@+id/chatgroup_selector_studygroup"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/chatgroup_selector_studygroup"
        app:layout_constraintTop_toTopOf="@+id/chatgroup_selector_studygroup"
        app:layout_constraintVertical_bias="0.384" />
    <ImageView
        android:id="@+id/chatgroup_selector_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:src="@drawable/small_blue_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="@+id/chatgroup_selector_friends"
        app:layout_constraintEnd_toEndOf="@+id/chatgroup_selector_friends"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/chatgroup_selector_friends"
        app:layout_constraintTop_toTopOf="@+id/chatgroup_selector_friends"
        app:layout_constraintVertical_bias="0.384" />


    <ListView

        android:id="@+id/chatgroup_selector_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/chatgroup_selector_friends"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatgroup_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="@color/UT_orange"
        />

</androidx.constraintlayout.widget.ConstraintLayout>