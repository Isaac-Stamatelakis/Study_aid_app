<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    >

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/attempt_content_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/screen_width_light_grey_rectangle"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:gravity="left"
        android:text="UNDEFINED ATTEMPT"
        android:id='@+id/attempt_content_text'
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/attempt_content_image"
        app:layout_constraintStart_toStartOf="@+id/attempt_content_image"
        app:layout_constraintTop_toTopOf="@+id/attempt_content_image"/>

    <TextView
        android:id='@+id/attempt_content_score'
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="left"
        android:text="Score"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/attempt_content_image"
        app:layout_constraintStart_toEndOf="@+id/attempt_content_text"
        app:layout_constraintTop_toTopOf="@+id/attempt_content_image" />

</androidx.constraintlayout.widget.ConstraintLayout>