<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/ai_generate_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Generating a [STUDYMATERIAL]"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/black"
        android:id="@+id/ai_generate_title_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:hint="Title"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_generate_top_text" />

    <EditText
        android:layout_marginHorizontal="20dp"
        android:id="@+id/ai_number_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="[STUDYMATERIAL_AMOUNT]"
        android:maxLength="2"
        android:inputType="number"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_generate_user_input" />

    <EditText
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/ai_generate_user_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left"
        android:hint="Enter what you want to be generated "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_generate_title_edit" />

    <Button

        android:id="@+id/ai_generate_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginVertical="10dp"
        android:text="Generate"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_number_text" />

</androidx.constraintlayout.widget.ConstraintLayout>