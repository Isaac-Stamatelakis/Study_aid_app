<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/user_content_box_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/screen_width_light_grey_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id='@+id/user_name'
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="UNDEFINED USER"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/user_content_box_image"
        app:layout_constraintEnd_toEndOf="@+id/user_content_box_image"
        app:layout_constraintStart_toStartOf="@+id/user_content_box_image"
        app:layout_constraintTop_toTopOf="@+id/user_content_box_image" />
</androidx.constraintlayout.widget.ConstraintLayout>